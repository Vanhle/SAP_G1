<mvc:View
    controllerName="overviewdashboard.projectdashboard.controller.OverviewDashboard"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:layout="sap.ui.layout"
    xmlns:card="sap.f.cards"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
>
    <Page
        id="page"
        class="sapUiContentPadding"
    >
        <content>
            <layout:Grid
                id="_IDGenGrid1"
                width="100%"
            >
                <layout:content>
                    <Panel
                        id="_IDGenPanel"
                        width="100%"
                    >
                        <layoutData>
                            <layout:GridData
                                id="_IDGenGridData"
                                span="L6 M6 S12"
                            />
                        </layoutData>
                        <VBox id="_IDGenVBox">
                            <HBox
                                id="_IDGenHBox"
                                class="sapUiSmallMarginBottom"
                            >
                                <Button
                                    id="_IDGenButton"
                                    text="View Details"
                                    press="onViewDetail"
                                />
                                <DateRangeSelection
                                    id="dateRangeSelection"
                                    change="onDateRangeChange"
                                    displayFormat="yyyy-MM-dd"
                                    delimiter="-"
                                    width="300px"
                                    class="sapUiSmallMarginBegin"
                                />
                                <Select
                                    id="stepSelect"
                                    width="100px"
                                    change="onStepChange"
                                    selectedKey="1d"
                                    class="sapUiSmallMarginBegin"
                                >
                                    <items>
                                        <core:Item
                                            id="_IDGenItem1"
                                            key="1d"
                                            text="1 Day"
                                        />
                                        <core:Item
                                            id="_IDGenItem2"
                                            key="2d"
                                            text="2 Days"
                                        />
                                        <core:Item
                                            id="_IDGenItem3"
                                            key="3d"
                                            text="3 Days"
                                        />
                                        <core:Item
                                            id="_IDGenItem4"
                                            key="4d"
                                            text="4 Days"
                                        />
                                        <core:Item
                                            id="_IDGenItem5"
                                            key="5d"
                                            text="5 Days"
                                        />
                                    </items>
                                </Select>
                                <Button
                                    id="refreshButton"
                                    icon="sap-icon://refresh"
                                    press="onRefreshPress"
                                    tooltip="Refresh Data"
                                    class="sapUiSmallMarginBegin"
                                />
                            </HBox>

                            <viz:VizFrame
                                id="idVizFrameColumn"
                                uiConfig="{applicationSet:'fiori'}"
                                vizType="column"
                                width="100%"
                                height="400px"
                                busy="{viewModel>/busy}"
                                busyIndicatorDelay="0"
                            >
                                <viz:dataset>
                                    <viz.data:FlattenedDataset
                                        id="processedDataFlattenedDataset"
                                        data="{processedDataModel>/results}"
                                    >
                                        <viz.data:dimensions>
                                            <viz.data:DimensionDefinition
                                                id="processedDataDimensionDefinition"
                                                name="Date"
                                                value="{processedDataModel>StartDateTime}"
                                            />
                                        </viz.data:dimensions>
                                        <viz.data:measures>
                                            <viz.data:MeasureDefinition
                                                id="processedDataMeasureDefinitionMedium"
                                                name="Medium Count"
                                                value="{processedDataModel>MediumCount}"
                                            />
                                            <viz.data:MeasureDefinition
                                                id="processedDataMeasureDefinitionHigh"
                                                name="High Count"
                                                value="{processedDataModel>HighCount}"
                                            />
                                        </viz.data:measures>
                                    </viz.data:FlattenedDataset>
                                </viz:dataset>
                                <viz:feeds>
                                    <viz.feeds:FeedItem
                                        id="processedDataFeedItem1"
                                        uid="valueAxis"
                                        type="Measure"
                                        values="Medium Count,High Count"
                                    />
                                    <viz.feeds:FeedItem
                                        id="processedDataFeedItem2"
                                        uid="categoryAxis"
                                        type="Dimension"
                                        values="Date"
                                    />
                                </viz:feeds>
                            </viz:VizFrame>
                        </VBox>
                    </Panel>
