                    <Panel
                        id="_IDGenPanel1"
                        width="100%"
                    >
                        <layoutData>
                            <layout:GridData
                                id="_IDGenGridData2"
                                span="L6 M6 S12"
                            />
                        </layoutData>
                        <VBox id="_IDGenVBox1">
                            <HBox id="_IDGenHBox7" class="sapUiSmallMarginBottom">
                                <Button
                                    id="_IDGenButton1"
                                    text="View Details"
                                    press="onViewDetail"
                                />
                                <Select
                                    id="chartTypeSelect"
                                    selectedKey="pie"
                                    change="onChartTypeChange"
                                    class="sapUiSmallMarginBegin"
                                >
                                    <items>
                                        <core:Item id="_IDGenItem6" key="pie" text="Pie Chart"/>
                                        <core:Item id="_IDGenItem7" key="column" text="Column Chart"/>
                                    </items>
                                </Select>
                            </HBox>
                            <viz:VizFrame
                                id="idVizFramePie"
                                uiConfig="{applicationSet:'fiori'}"
                                vizType="{viewModel>/pieChartType}"
                                width="100%"
                                height="400px"
                                busy="{viewModel>/pieBusy}"
                                busyIndicatorDelay="0"
                            >
                                <viz:dataset>
                                    <viz.data:FlattenedDataset
                                        id="_IDGenFlattenedDataset1"
                                        data="{logDataModel>/logData}"
                                    >
                                        <viz.data:dimensions>
                                            <viz.data:DimensionDefinition
                                                id="_IDGenDimensionDefinition1"
                                                name="Log Type"
                                                value="{logType}"
                                            />
                                        </viz.data:dimensions>
                                        <viz.data:measures>
                                            <viz.data:MeasureDefinition
                                                id="_IDGenMeasureDefinition1"
                                                name="Count"
                                                value="{count}"
                                            />
                                        </viz.data:measures>
                                    </viz.data:FlattenedDataset>
                                </viz:dataset>
                                <viz:feeds>
                                    <viz.feeds:FeedItem
                                        id="_IDGenFeedItem3"
                                        uid="size"
                                        type="Measure"
                                        values="Count"
                                    />
                                    <viz.feeds:FeedItem
                                        id="_IDGenFeedItem4"
                                        uid="color"
                                        type="Dimension"
                                        values="Log Type"
                                    />
                                </viz:feeds>
                            </viz:VizFrame>
                        </VBox>
                    </Panel>
                </layout:content>
            </layout:Grid>
            <layout:Grid
                id="_IDGenGrid2"
                width="100%"
            >
                <layout:content>
                    <Panel
                        id="_IDGenPanel2"
                        width="100%"
                    >
                        <layoutData>
                            <layout:GridData
                                id="_IDGenGridData23"
                                span="L8 M12 S12"
                            />
                        </layoutData>
                        <VBox id="_IDGenVBox2">
                            <Button
                                id="_IDGenButton2"
                                text="View Details"
                                press="onViewDetail"
                            />
                            <viz:VizFrame
                                id="eventTimeVizFrame"
                                uiConfig="{applicationSet:'fiori'}"
                                vizType="line"
                                width="100%"
                                height="400px"
                            >
                                <viz:dataset>
                                    <viz.data:FlattenedDataset
                                        id="_IDGenFlattenedDataset2"
                                        data="{eventTimeModel>/data}"
                                    >
                                        <viz.data:dimensions>
                                            <viz.data:DimensionDefinition
                                                id="_IDGenDimensionDefinition2"
                                                name="Time"
                                                value="{eventTimeModel>time}"
                                            />
                                        </viz.data:dimensions>
                                        <viz.data:measures>
                                            <viz.data:MeasureDefinition
                                                id="_IDGenMeasureDefinition2"
                                                name="Quantity"
                                                value="{eventTimeModel>quantity}"
                                            />
                                        </viz.data:measures>
                                    </viz.data:FlattenedDataset>
                                </viz:dataset>
                                <viz:feeds>
                                    <viz.feeds:FeedItem
                                        id="_IDGenFeedItem5"
                                        uid="valueAxis"
                                        type="Measure"
                                        values="Quantity"
                                    />
                                    <viz.feeds:FeedItem
                                        id="_IDGenFeedItem6"
                                        uid="categoryAxis"
                                        type="Dimension"
                                        values="Time"
                                    />
                                </viz:feeds>
                            </viz:VizFrame>
                        </VBox>
                    </Panel>
                    <Panel
                        id="_IDGenPanel3"
                        width="100%"
                        height="100%"
                    >
                        <layoutData>
                            <layout:GridData
                                id="_IDGenGridData3"
                                span="L4 M12 S12"
                            />
                        </layoutData>
                        <VBox
                            id="_IDGenVBox3"
                            class="sapUiSmallMargin"
                            justifyContent="Center"
                            alignItems="Start"
                        >
                            <HBox
                                id="_IDGenHBox1"
                                justifyContent="Start"
                                alignItems="Center"
                            >
                                <Text
                                    id="_IDGenText1Title"
                                    text="Last update at:"
                                    class="sapUiSmallMarginEnd largeText"
                                    wrapping="false"
                                    width="150px"
                                />
                                <Text
                                    id="_IDGenText1Content"
                                    text="{timeModel>/currentTime}"
                                    class="sapUiSmallMarginEnd"
                                    wrapping="false"
                                />
                            </HBox>
                            <HBox
                                id="_IDGenHBox2"
                                justifyContent="Start"
                                alignItems="Center"
                            >
                                <Text
                                    id="_IDGenText2Title"
                                    text="Alert today:"
                                    class="sapUiSmallMarginEnd largeText"
                                    wrapping="false"
                                    width="150px"
                                />
                                <Text
                                    id="_IDGenText2Content"
                                    text="3"
                                    class="sapUiSmallMarginEnd"
                                    wrapping="false"
                                />
                            </HBox>
                        </VBox>
                    </Panel>
                </layout:content>
            </layout:Grid>
        </content>
    </Page>
</mvc:View>
